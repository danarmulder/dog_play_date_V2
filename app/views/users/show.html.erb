<div class="ui stackable two column grid page-body">
  <div class="five wide column">
    <div class="ui segment">
      <a class="ui ribbon label"><%= @user.full_name %></a>
      <div class="ui small circular image">
        <img id="user_image" src="<%= @user.avatar %>">
      </div>

      <div class="ui segment">
        <div class="content" data-user-zipcode="<%= @user.zipcode %>">
          <p><strong>Age: </strong><%= @user.age %></p>
          <p><strong>Gender: </strong><%= @user.gender %></p>
          <p><strong>Bio: </strong><%= @user.bio %></p>
        </div>
      </div>
      <div class="ui segment extra content">
        <i class="mail icon"></i><%= link_to 'Message me!', conversations_path(sender_id: current_user.id, recipient_id: @user.id), id: "message-user-#{@user.id}", method: 'post'%>
      </div>
    </div>
  </div>
  <div class="eleven wide column">
    <div class="ui segment">
      <div class="ui header center aligned">
        <%= @user.user_name %>'s Dogs
      </div>
      <div class="horizontal divider"></div>
      <div class="ui three column padded page grid">
        <% @dogs.in_groups(3) do |column_dogs| %>
        <div class="column">
          <% column_dogs.each do |dog| %>
            <% break if dog.nil? %>
            <div class="ui fluid card pop-out">
              <div class="image dimmable">
                <%= image_tag(dog.avatar_url) %>
              </div>
              <div class="content dog" data-dog-id =<%= "#{dog.id}" %> >
                <div class="ui header center aligned"><%= dog.name %></div>
              </div>
            </div>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
    <div class="ui segment" id = "map-container">
      <h3 class="ui dividing header">Parks between you and <%= @user.first_name %></h3>
      <div id="mapbox_map">
      </div>
    </div>
  </div>
</div>

<script charset="utf-8" id="dog-modal" text="text/x-handlebars-template">
<div class="ui modal">
  <i class="close icon"></i>
  <div class="ui center aligned header">{{name}}</div>
  <div class="content">
    <div class="ui medium circular image">
      <img src ={{image}}>
    </div>
    <div class="description">
      <h3>A Little Bit About Me</h3>
      <p>{{bio}}</p>
      <ul>
        <li>Breed:{{breed}}</li>
        <li>Gender: {{gender}}</li>
        <li>Play Type:{{play}}</li>
        <li>Personality Type: {{personality}}</li>
      </ul>
    </div>
  </div>
  <div class="actions">
    <div class="ui button">OK</div>
  </div>
</div>
</script>
